. "${srcdir=.}/scno_tampering.sh"

: ${IOCTL_INJECT_START=256}

run_strace -a27 "$@" -e trace=ioctl \
	-e inject=ioctl:retval=42:when="${IOCTL_INJECT_START}+" \
	"../$NAME" "${IOCTL_INJECT_START}" > "$EXP"
grep -v '^ioctl([012][,<]' < "$LOG" > "$OUT"
match_diff "$OUT" "$EXP"
